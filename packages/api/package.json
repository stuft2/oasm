{
  "name": "oasm-api",
  "version": "1.0.0",
  "description": "OpenAPI Specification Manager",
  "main": "dist/index.js",
  "scripts": {
    "build": "npm run clean && tsc",
    "clean": "del-cli dist",
    "lint": "eslint . --ext .ts,.tsx",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/stuft2/oasm.git"
  },
  "keywords": [
    "OpenAPI",
    "Swagger",
    "OAS",
    "Manager"
  ],
  "author": "Spencer Tuft <spencer.tuft@gmail.com>",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/stuft2/oasm/issues"
  },
  "homepage": "https://github.com/stuft2/oasm#readme",
  "dependencies": {
    "debug": "^4.3.1",
    "express": "^4.17.1",
    "mongodb": "^3.6.3",
    "openapi-enforcer": "^1.13.1",
    "openapi-enforcer-middleware": "^1.2.3"
  },
  "devDependencies": {
    "@byu-oit/uapi-ts": "^2.0.0",
    "@tsconfig/node14": "^1.0.0",
    "@types/debug": "^4.1.5",
    "@types/express": "^4.17.11",
    "@types/mongodb": "^3.6.3",
    "@typescript-eslint/eslint-plugin": "^4.14.1",
    "@typescript-eslint/parser": "^4.14.1",
    "del-cli": "^3.0.1",
    "eslint": "^7.19.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-prettier": "^3.3.1",
    "husky": "^4.3.8",
    "lint-staged": "^10.5.3",
    "prettier": "^2.2.1",
    "typescript": "^4.1.3"
  },
  "eslintConfig": {
    "root": true,
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "prettier",
      "prettier/@typescript-eslint"
    ]
  },
  "eslintIgnore": [
    "node_modules",
    "dist",
    "coverage"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": "eslint --cache --fix"
  }
}
