{
  "name": "oasm-api",
  "version": "1.0.0",
  "description": "OpenAPI Specification Manager",
  "main": "dist/index.js",
  "engines": {
    "node": ">=15"
  },
  "engineStrict": true,
  "scripts": {
    "build": "tsc && cpy '**/*' '!**/*.ts' ../dist --cwd=src --parents",
    "clean": "del-cli dist",
    "coverage": "nyc npm test",
    "dev": "node -r ts-node/register -r dotenv/config src/index.ts",
    "lint": "eslint . --ext .ts,.tsx",
    "start": "node dist/index.js",
    "test": "mocha -r ts-node/register -r source-map-support/register test/unit/**/*.spec.ts",
    "test:integration": "node -r ts-node/register test/integration/runner.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/stuft2/oasm.git"
  },
  "keywords": [
    "OpenAPI",
    "Swagger",
    "OAS",
    "Manager"
  ],
  "author": "Spencer Tuft <spencer.tuft@gmail.com>",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/stuft2/oasm/issues"
  },
  "homepage": "https://github.com/stuft2/oasm#readme",
  "dependencies": {
    "ajv": "^7.1.0",
    "ajv-formats": "^1.5.1",
    "debug": "^4.3.1",
    "env-var": "^7.0.0",
    "express": "^4.17.1",
    "got": "^11.8.1",
    "lodash.get": "^4.4.2",
    "mongodb": "^3.6.4",
    "openapi-enforcer": "^1.13.1",
    "openapi-enforcer-middleware": "^1.2.3",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@byu-oit/uapi-ts": "^2.0.0",
    "@istanbuljs/nyc-config-typescript": "^1.0.1",
    "@tsconfig/node14": "^1.0.0",
    "@types/chai": "^4.2.15",
    "@types/chai-as-promised": "^7.1.3",
    "@types/debug": "^4.1.5",
    "@types/express": "^4.17.11",
    "@types/lodash.get": "^4.4.6",
    "@types/mocha": "^8.2.0",
    "@types/mongodb": "^3.6.3",
    "@types/sinon": "^9.0.10",
    "@types/uuid": "^8.3.0",
    "@typescript-eslint/eslint-plugin": "^4.14.1",
    "@typescript-eslint/parser": "^4.14.1",
    "chai": "^4.3.0",
    "chai-as-promised": "^7.1.1",
    "cpy-cli": "^3.1.1",
    "del-cli": "^3.0.1",
    "dotenv": "^8.2.0",
    "eslint": "^7.19.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-prettier": "^3.3.1",
    "husky": "^4.3.8",
    "lint-staged": "^10.5.3",
    "mocha": "^8.3.0",
    "newman": "^5.2.2",
    "nyc": "^15.1.0",
    "openapi-types": "^7.2.3",
    "prettier": "^2.2.1",
    "sinon": "^9.2.4",
    "source-map-support": "^0.5.19",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.3"
  },
  "eslintConfig": {
    "root": true,
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "prettier",
      "prettier/@typescript-eslint"
    ]
  },
  "eslintIgnore": [
    "node_modules",
    "dist",
    "coverage"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": "eslint --cache --fix"
  }
}
